<h2 class="ui center aligned large header"> Welcome to MessageMe - <em>A Comeplete Chat App </em>
</h2>

<h3 class ="ui center aligned medium icon header">
  <i class ="circular red power off large icon"></i>
  Log in to continue 
</h3>

<div class="ui placeholder segment">
  <div class="ui two column stackable center aligned grid">
    <div class="ui vertical divider">Or</div>
    <div class = "column">
      <%= form_for(:session, html: {class:"ui form", role:"form"}, url: login_path, local: true) do |f|%>
        <div class = "field">
          <%= f.label :username, "Username" %>
          <div class = "ui left icon input">
            <%= f.text_field :username, placeholder: "Username"%>
            <i class ="user icon"></i>
          </div>
        </div>

        <div class = "field">
          <%= f.label :password, "Password" %>
          <div class = "ui left icon input">
            <%= f.text_field :password, placeholder: "Password"%>
            <i class ="lock icon"></i>
          </div>
        </div>
        <%= f.button "login", class: "ui red submit button"%>
      <%end%>
    </div>

    <div class ="middle aligned column">
      <div class = "ui big red disabled button">
        <i class="signup icon"></i>
        Sign up
      </div>
    </div>
  </div>
</div>
